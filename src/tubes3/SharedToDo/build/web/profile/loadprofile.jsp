table header">            <h4>Tag</h4>        </div>    </div>    <%        sqlQuery = "SELECT taskname, deadline, tags FROM task WHERE assignee like '%" + username + "%' AND status = 0 ORDER BY deadline DESC";        int i = 1;        resultSet = ConnectDB.mysql_query(sqlQuery);        while (resultSet.next())         {            String taskname = resultSet.getString("taskname").trim();            String deadline = resultSet.getString("deadline").trim();            String tag = resultSet.getString("tags").trim();            String type = (i % 2 == 1) ? "odd" : "even";    %>    <div class = "clearall taskcontainer <%=type%>" id="taskcontents">        <div class="tasktable">            <h4><%=taskname%></h4>        </div>        <div class="tasktable">            <h4><%=deadline%></h4>        </div>        <div class="tasktable">            <h4><%=tag%></h4>        </div>    </div></div><%        ++i;    }%><div class="clearall container">    <div class = "box">        <h2>Finished Tasks</h2>    </div>    <div class = "clearall taskcontainer even" id="taskheaders">        <div class="tasktable header">            <h4>Task Name</h4>        </div>	        <div class="tasktable header">            <h4>Deadline</h4>        </div>        <div class="tasktable header">            <h4>Tag</h4>        </div>				    </div>    <%        sqlQuery = "SELECT taskname, deadline, tags FROM task WHERE assignee like '%" + username + "%' AND status = 1 ORDER BY deadline DESC";        i = 1;        resultSet = ConnectDB.mysql_query(sqlQuery);        while (resultSet.next())         {            String taskname = resultSet.getString("taskname").trim();            String deadline = resultSet.getString("deadline").trim();            String tag = resultSet.getString("tags").trim();            String type2 = (i % 2 == 1) ? "odd" : "even";    %>    <div class = "clearall taskcontainer <%=type2%>" id="taskcontents">        <div clas